<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="SpeakableTextPresentCheck">
    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white_A700"
        android:id="@+id/Homepagescreen">

        <LinearLayout
            android:id="@+id/rootFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5pxh"
            android:gravity="top"
            android:layerType="hardware"
            >
            <ImageView
                android:id="@+id/imageLogoVirCleThree"
                android:layout_height="@dimen/_63pxh"
                android:layout_width="@dimen/_219pxh"
                android:src="@drawable/img_logovircle3"
                />
            <LinearLayout android:id="@+id/linearRowsearch"
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:layout_marginStart="@dimen/_70pxh"
                android:layout_gravity="end"
                android:gravity="center"
                >

                <ImageView
                    android:id="@+id/imageSearch"
                    android:layout_width="42dp"
                    android:layout_height="42dp"
                    android:layout_marginTop="@dimen/_9pxv"
                    android:layout_marginBottom="@dimen/_8pxv"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_search"
                    tools:ignore="ContentDescription" />
                <ImageView android:id="@+id/imageUser"
                    android:layout_height="@dimen/_45pxh"
                    android:layout_marginStart="@dimen/_15pxh"
                    android:layout_width="@dimen/_45pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_user"
                    tools:ignore="ContentDescription" tools:src="@drawable/img_user"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/lay_MenuTop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="75dp"
            android:orientation="horizontal"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/rootFragment">

            <TextView
                android:layout_width="wrap_content"
                style="@style/txtHappyMonkeyregular16_1"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:layout_marginEnd="7dp"
                android:text="Komunitas"
                android:textColor="@color/black"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/txtHappyMonkeyregular16_1"
                android:layout_marginStart="7dp"
                android:layout_marginEnd="7dp"
                android:text="Popular"
                android:textColor="@color/black" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/txtHappyMonkeyregular16_1"
                android:layout_marginStart="7dp"
                android:layout_marginEnd="7dp"
                android:text="Live"
                android:textColor="@color/black" />

        </LinearLayout>

        <ScrollView
            android:id="@+id/scrollView"
            android:layout_width="match_parent"
            android:layout_height="672dp"
            android:layout_marginTop="100dp"
            android:padding="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/lay_MenuTop">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp">
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rcv_daftarberita"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginBottom="450dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>

        <com.google.android.material.bottomnavigation.BottomNavigationView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_500pxh"
            android:layout_alignParentBottom="true"
            android:id="@+id/bottomNavigation"
            app:menu="@menu/bottom_navigation">
        </com.google.android.material.bottomnavigation.BottomNavigationView>
    </RelativeLayout>
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"

        />
</androidx.drawerlayout.widget.DrawerLayout>